---
import BaseLayout from '../layouts/BaseLayout.astro';
const allPosts = await Astro.glob('../pages/posts/*.md');
const pageTitle = "Latest Work";
---
<BaseLayout pageTitle={pageTitle}>
    <head>
        <style>
            .work-content {
                display: flex;
                flex-direction: row;
                gap: 10px;
                flex-wrap: wrap;
                justify-content: center;
                padding: 0;
            }

            .work-container {
                width: 220px;
                height: auto;
                flex-wrap: wrap;
                padding: 4px;
                overflow: visible;
            }

            .work-container p {
                text-align: left;
            }

            .work-img {
                width: 100%;
                height: auto;
                box-shadow: 20px 20px 20px 20px rgba(0, 0, 0, 0.05);
                border-radius: 20px;
                margin-bottom: 10px;
            }

            @media only screen and (min-width: 870px) {
                .work-content {
                    gap: 20px 100px;
                }

                .work-img {
                    width: 100%;
                }

                .work-container {
                    width: 270px;
                }
            }
        </style>
    </head>
    <main>
        <p>This is where I will post about my journey learning Astro.</p>
        <ul>
            {allPosts.map((post) => <li><a href={post.url}><img class="work-img" src={post.frontmatter.image.url}>{post.frontmatter.title}{post.frontmatter.description}</a></li>)}
        </ul>

        <ul class="work-content">
            <li>
                <figure class="work-container">
                    <img class="work-img" src="/assets/img/digipath.png" alt="Figma Board of the UX/UI Project of the Whatsapp AI Sticker Feature" />
                    <h3>Digipath</h3>
                    <h4>Design Job Quiz</h4>
                    <p>FBAUL</p>
                </figure>
            </li>
            <li>
                <figure class="work-container">
                    <img class="work-img" src="/assets/img/big_blue.png" alt="Figma Board of the UX/UI Project of the Refurbishing of the FBAUL Website UX/UI Project" />
                    <figcaption>
                        <h3>Big Blue</h3>
                        <h4>Swimming School</h4>
                        <p>FBAUL</p>
                    </figcaption>
                </figure>
            </li>
            <li>
                <figure class="work-container">
                    <img class="work-img" src="/assets/img/sticker.png" alt="Figma Board of the UX/UI Project of the Refurbishing of the Super Duper Product" />
                    <figcaption>
                        <h3>Smart Stickers</h3>
                        <h4>Whatsapp Feature</h4>
                        <p>FBAUL</p>
                    </figcaption>
                </figure>
            </li>
        </ul>
    </main>
</BaseLayout>